<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="1000sp" />
            <stroke android:width="1dip" android:color="#A69091" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#2E2D2A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="1000sp" />
            <stroke android:width="1dip" android:color="#FFEB3B" />
            <solid android:color="#FFEB3B"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="1000sp" />
            <stroke android:width="1dip" android:color="#4A4747" />
            <gradient android:angle="-90" android:startColor="#E7E4E1" android:endColor="#FAFAFA" />
        </shape>
    </item>
</selector>