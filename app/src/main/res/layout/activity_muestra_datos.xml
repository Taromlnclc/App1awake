<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MuestraDatos">

        <TextView
            android:id="@+id/miTituloReg"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/titulo_fondo"
            android:paddingLeft="8sp"
            android:paddingTop="16sp"
            android:paddingRight="8sp"
            android:paddingBottom="16sp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/select"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="373dp"
            android:layout_height="290dp"
            android:layout_marginTop="100sp"
            android:contentDescription="@string/userRes"
            android:src="@drawable/registered"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/muestraDato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="420sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/titulo_fondo"
            android:paddingLeft="8sp"
            android:paddingTop="5sp"
            android:paddingRight="8sp"
            android:paddingBottom="5sp"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/textoFore"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
